function onLoadContent(element){var loading=$(".holder-loading");loading.css("opacity",0),setTimeout(function(){loading.remove()},1e3),$(element).css("opacity",1)}$(function(){function onHoverIn(){var img=$(this);img.prev().width(img.width()).height(img.height()).css("opacity","0.7")}function onHoverOut(){var that=$(this);that.css("opacity",0),setTimeout(function(){that.width(0).height(0)},300)}function onShare(){var network=$(this).data("network"),url=encodeURIComponent($("#social-url").val()||window.location.href),title=encodeURIComponent($("#social-title").val()||$("title:first").text()),networks={facebook:"https://www.facebook.com/sharer.php?display=popup&u="+url,twitter:"https://twitter.com/share?text="+title+"&url="+url+"&via=thesvp",gplus:"https://plus.google.com/share?url="+url,linkedin:"https://www.linkedin.com/shareArticle?mini=true&url="+url+"&title="+title};window.open(networks[network],"share","height=320, width=640, toolbar=no, menubar=no, scrollbars=no, resizable=no, location=no, directories=no, status=no")}function onShowImage(){var $src=$(this).next().attr("src");$("#sticky-social").addClass("hide-sticky"),setTimeout(function(){$(".show").fadeIn(),$(".img-show img").attr("src",$src)},300)}function onHideImage(){$(".show").fadeOut(300,function(){$("#sticky-social").removeClass("hide-sticky")})}function onCheckModalOpen(){var modal=$(".show");modal.is(":hidden")||onHideImage()}function onKeyUp(event){var code=event.keyCode||event.which,escapeCode=27;code===escapeCode&&onHideImage()}$("img.content").mouseenter(onHoverIn),$(".zoom-hover").mouseleave(onHoverOut),$(".popup .zoom-hover").click(onShowImage),$("button[data-network]").click(onShare),$(this).click(onCheckModalOpen),$(this).keyup(onKeyUp)});